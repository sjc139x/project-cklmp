<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">
    <TextView
            android:text="friend name"
            android:layout_width="192dp"
            android:layout_height="53dp"
            android:id="@+id/friend_username"
            android:textSize="23sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:gravity="center|start" android:clickable="false"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/friend_remove_button" android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.25"/>
    <ImageView
            android:layout_width="67dp"
            android:layout_height="51dp" app:srcCompat="@drawable/gem_red"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.0" android:layout_weight="1" android:id="@+id/imageView3"
    />
    <Button
            android:text="@string/decline_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/friend_remove_button"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_weight="1"
            app:layout_constraintVertical_bias="0.461" android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="36dp"/>
</android.support.constraint.ConstraintLayout>
