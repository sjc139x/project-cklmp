<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/map"
              tools:context=".MapsActivity"
              android:name="com.google.android.gms.maps.SupportMapFragment"


    />
    <Button
            android:text="@string/button_label_place_marker"
            android:layout_width="214dp"
            android:layout_height="63dp" android:id="@+id/drop_vid_button"
            android:layout_marginBottom="39dp" android:layout_alignBottom="@+id/map"
            android:layout_alignRight="@+id/map" android:layout_marginRight="100dp" android:layout_marginEnd="100dp"
            android:layout_alignEnd="@+id/map" android:layout_alignParentStart="true" android:layout_marginLeft="97dp"
            android:layout_marginStart="97dp" android:layout_alignParentLeft="true"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/change_detail"/>


</RelativeLayout>