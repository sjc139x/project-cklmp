<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/map"
              tools:context=".MapsActivity"
              android:name="com.google.android.gms.maps.SupportMapFragment"


    />
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/change_detail"/>
    <ImageButton
            android:src="@drawable/gem_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/red_button" android:background="#00FFFFFF"
            android:layout_marginBottom="167dp" android:layout_alignBottom="@+id/map"
            android:layout_alignRight="@+id/map" android:layout_marginRight="7dp" android:layout_marginEnd="7dp"
            android:layout_alignEnd="@+id/map"/>
    <ImageButton
            android:src="@drawable/gem_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/purple_button" android:layout_marginBottom="231dp"
            android:layout_alignBottom="@+id/map" android:layout_alignRight="@+id/map"
            android:layout_marginRight="7dp" android:layout_marginEnd="7dp" android:layout_alignEnd="@+id/map"
            android:background="#00FFFFFF"/>
    <ImageButton
            android:src="@drawable/gem_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/blue_button" android:background="#00FFFFFF"
            android:layout_marginBottom="294dp" android:layout_alignBottom="@+id/map"
            android:layout_alignRight="@+id/map" android:layout_marginRight="7dp" android:layout_marginEnd="7dp"
            android:layout_alignEnd="@+id/map"/>
    <ImageButton
            android:src="@drawable/gem_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/place_marker_gem" android:background="#00FFFFFF"
            android:layout_marginBottom="27dp" android:layout_alignBottom="@+id/map"
            android:layout_alignRight="@+id/map" android:layout_marginRight="158dp" android:layout_marginEnd="158dp"
            android:layout_alignEnd="@+id/map" android:layout_marginLeft="152dp" android:layout_marginStart="152dp"
            android:layout_alignLeft="@+id/map" android:layout_alignStart="@+id/map"/>


</RelativeLayout>