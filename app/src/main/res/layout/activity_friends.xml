<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FriendsActivity">
    <android.support.v7.widget.RecyclerView
            android:layout_width="377dp"
            android:layout_height="418dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.767"
            android:id="@+id/friends_list"/>
    <SearchView
            android:layout_width="244dp"
            android:layout_height="44dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.199"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.081" android:id="@+id/searchView"/>
    <TextView
            android:layout_width="373dp"
            android:layout_height="64dp" tools:layout_editor_absoluteY="26dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/textView" android:text="@string/friends_list_title"
            android:textSize="35dp" android:textAllCaps="false"
            android:gravity="center"/>
</android.support.constraint.ConstraintLayout>