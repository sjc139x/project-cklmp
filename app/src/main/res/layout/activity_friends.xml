<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FriendsActivity">
    <android.support.v7.widget.RecyclerView
            android:layout_width="369dp"
            android:layout_height="585dp"
            android:id="@+id/friends_list"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="128dp"/>
    <TextView
            android:text="@string/friends_list_title"
            android:layout_width="124dp"
            android:layout_height="37dp"
            android:id="@+id/friends_list_title" android:textSize="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.015"
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toTopOf="@+id/add_friend_input_field"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="268dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:hint="username"
            android:ems="10"
            android:id="@+id/add_friend_input_field" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="21dp" app:layout_constraintBottom_toTopOf="@+id/friends_list"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toStartOf="@+id/add_friend_button"
            android:layout_marginRight="24dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/add_friend_button_text"
            android:layout_width="79dp"
            android:layout_height="48dp"
            android:id="@+id/add_friend_button" android:textAllCaps="false"
            android:gravity="center" android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/friends_list" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>