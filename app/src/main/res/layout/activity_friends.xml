<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FriendsActivity">
    <android.support.v7.widget.RecyclerView
            android:layout_width="370dp"
            android:layout_height="433dp"
            android:id="@+id/friends_list"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.32"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.917"/>
    <SearchView
            android:layout_width="372dp"
            android:layout_height="40dp"
            android:id="@+id/friends_search_bar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.478"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/friends_list"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="373dp"
            android:layout_height="64dp"
            android:id="@+id/textView" android:text="@string/friends_search_title"
            android:textSize="35dp" android:textAllCaps="false"
            android:gravity="center" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
    />
    <TextView
            android:text="@string/friends_list_title"
            android:layout_width="124dp"
            android:layout_height="37dp"
            android:id="@+id/textView2" android:textSize="25dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.029"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/friends_search_bar"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/friends_list"/>
</android.support.constraint.ConstraintLayout>